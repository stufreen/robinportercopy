---
import ExternalMedia from "./ExternalMedia.astro";

const { media, externalMediaUrls } = Astro.props;
---

<style lang="scss">
  .project-image {
    aspect-ratio: 16 / 9;
    max-width: 100%;
    object-fit: cover;
  }
</style>
{
  externalMediaUrls &&
    externalMediaUrls.map((externalMediaUrl) => (
      <ExternalMedia url={externalMediaUrl} />
    ))
}
{
  media &&
    media.map((item) => {
      return (
        <img
          class="project-image"
          src={`${item.fields.file.url}?w=1400&fit=fill`}
          alt={item.fields.title}
        />
      );
    })
}
