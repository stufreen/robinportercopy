---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

const { project } = Astro.props;
const coverImage = project.fields.coverImage;
---

<style lang="scss">
  .project-link {
    display: block;
    transition: all 0.2s;

    &:hover {
      background-color: #eeeeee;
      box-shadow: 0 0 0 8px #eeeeee;
      border-radius: 2px;
    }
  }

  .project-copy {
    padding: var(--spacing-2);

    @media (min-width: 600px) {
      grid-template-columns: 1fr 1fr;
      padding: 0 0 var(--spacing-2) 0;
    }
  }

  .project-title {
    font-size: 0.85em;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    margin: var(--spacing-1) 0;
  }

  .project-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }
</style>

<style lang="scss" is:global>
  .project-description {
    font-size: 0.85em;
    color: #778;

    p {
      margin-top: 0;
    }
  }
</style>

<a href={`/project/${project.fields.slug}`} class="project-link">
  {
    coverImage && (
      <img
        class="project-image"
        src={`${coverImage.fields.file.url}?w=600&fit=fill`}
        alt={coverImage.fields.title}
      />
    )
  }
  <div class="project-copy">
    <h2 class="project-title">{project.fields.title}</h2>
    <div
      class="project-description"
      set:html={documentToHtmlString(project.fields.shortDescription)}
    >
    </div>
  </div>
</a>
